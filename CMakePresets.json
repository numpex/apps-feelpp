{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "default",
            "displayName": "Default Config",
            "description": "Default config",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/default",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_INSTALL_PREFIX" : "${sourceDir}/build/default/install/",
                "CMAKE_BUILD_TYPE": "Release"
            },
            "vendor": {
                "example.com/ExampleIDE/1.0": {
                    "autoFormat": true
                }
            }
        },
        {
            "name": "debug",
            "displayName": "Debug Config",
            "description": "Debug config",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_INSTALL_PREFIX" : "${sourceDir}/build/debug/install/",
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "kokkos",
            "displayName": "Kokkos",
            "description": "use kokkos",
            "generator": "Unix Makefiles",
            "binaryDir": "${sourceDir}/build/kokkos",
            "cacheVariables": {
                "CMAKE_CXX_COMPILER": "clang++",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_INSTALL_PREFIX" : "${sourceDir}/build/default/install/",
                "CMAKE_BUILD_TYPE": "Release",
                "FEELPP_ENABLE_KOKKOS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "jobs": 10
        },
        {
            "name": "debug",
            "configurePreset": "debug",
            "jobs": 10
        },
        {
            "name": "kokkos",
            "configurePreset": "kokkos",
            "jobs": 10
        }
    ],
    "testPresets": [
        {
            "name": "default",
            "configurePreset": "default",
            "output": {
                "outputOnFailure": true
            },
            "execution": {
                "noTestsAction": "ignore",
                "stopOnFailure": true
            }
        }
    ],
    "vendor": {
        "example.com/ExampleIDE/1.0": {
            "autoFormat": false
        }
    }
}