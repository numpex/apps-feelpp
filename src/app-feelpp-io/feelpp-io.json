{
    "executable": "$PWD/build/default/src/app-feelpp-io/feelpp_app_io",
    "output_directory": "{{machine.output_app_dir}}/app-feelpp-io/io",
    "use_case_name": "ThermalBridgesENISO10211",
    "timeout":"0-00:15:00",
    "resources":{
        "tasks":"{{parameters.tasks.value}}",
        "exclusive_access":true
    },
    "input_file_dependencies":{
        "mesh_json":"feelpp_toolboxes/ThermalBridgesENISO10211/partitioning/case3/{{parameters.mesh.value}}/case3_p{{parameters.tasks.value}}.json",
        "mesh_hdf5":"feelpp_toolboxes/ThermalBridgesENISO10211/partitioning/case3/{{parameters.mesh.value}}/case3_p{{parameters.tasks.value}}.h5"
    },
    "platforms": {
        "builtin":{
            "input_dir":"{{machine.input_dataset_base_dir}}"
        }
    },
    "options": [
        "--directory {{output_directory}}/{{instance}}/{{use_case_name}}",
        "--discretization {{parameters.discretization.value}}",
        "--repository.append.np 0",
        "--gmsh.filename {{platforms.{{machine.platform}}.input_dir}}/{{input_file_dependencies.mesh_json}}",
        "--nrun 1"
    ],
    "additional_files":{
        "custom_logs":[
            "{{output_directory}}/{{instance}}/{{use_case_name}}/logs/{{executable}}.INFO",
            "{{output_directory}}/{{instance}}/{{use_case_name}}/logs/{{executable}}.WARNING"
        ]
    },
    "scalability": {
        "directory": "{{output_directory}}/{{instance}}/{{use_case_name}}",
        "clean_directory":true,
        "stages": [
            {
                "name": "",
                "filepath": "time_measures.json",
                "format": "json",
                "variables_path": "time.*",
                "units": { "*": "s"}
            },
            {
                "name":"meshStats",
                "filepath":"mesh_stats.csv",
                "format":"csv"
            }
        ]
    },
    "parameters": [
        {
            "name":"tasks",
            "sequence":[1, 2, 4, 8, 16, 32, 64, 128]
        },
        {
            "name":"mesh",
            "sequence":["M1","M2","M3"],
            "conditions":{
                "M3":[{"tasks":[32,64,128]}]
            }
        },
        {
            "name":"discretization",
            "sequence":["P1","P2"]
        }
    ]
}
